" MacVim用設定
if has('gui_macvim')
  set number           " 行番号表示
  set showtabline=2    " タブを常に表示
  set transparency=5   " 透明度
  set imdisable        " IME OFF
  set guioptions-=T    " ツールバー非表示
  set antialias        " アンチエイリアス

  set columns=180      " 横幅
  set lines=60         " 行数

  " フォント設定
  set guifontwide=ゆたぽん（コーディング）:h20
  set guifont=ゆたぽん（コーディング）:h20
endif
